#!/bin/bash
# ~/.bash_completion - user bash completions

# Use SSH completions for `sshpass'
complete -F _ssh sshpass
# Use SCP completions for `scppass'
complete -F _scp -o nospace scppass

# Even more completions
if [[ -d "${HOME}/.bash_completion.d" ]]; then
  shopt -s nullglob
  for file in "${HOME}/.bash_completion.d"/*; do
    source "${file}"
  done
  shopt -u nullglob
fi
